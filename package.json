{
  "name": "skeleton",
  "description": "Estrutura básica para aplicações em PHP 7",
  "keywords": [
    "PHP",
    "Framework",
    "Slim"
  ],
  "author": {
    "email": "ailton.loures99@gmail.com",
    "name": "Ailton Loures"
  },
  "license": "MIT",
  "homepage": "https://github.com/ailtonloures/skeleton#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ailtonloures/skeleton.git"
  },
  "scripts": {
    "commit": "git-cz"
  },
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
